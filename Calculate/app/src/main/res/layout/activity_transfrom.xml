<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context="com.example.zhm.calculate.Transfrom">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:text="@string/transfrom_unit"
        android:textSize="25dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="米" />

            <EditText
                android:id="@+id/et_m"
                android:layout_width="150px"
                android:layout_height="wrap_content"
                android:maxLength="30" />

            <Button
                android:id="@+id/btn_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transfrom" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="里" />

            <EditText

                android:id="@+id/et_li"
                android:layout_width="150px"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_li"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transfrom" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="丈" />

            <EditText
                android:id="@+id/et_zhang"
                android:layout_width="150px"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_zhang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transfrom" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="尺" />

            <EditText
                android:id="@+id/et_chi"
                android:layout_width="150px"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_chi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transfrom" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="寸" />

            <EditText
                android:id="@+id/et_cun"
                android:layout_width="150px"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_cun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transfrom" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分" />

            <EditText
                android:id="@+id/et_fen"
                android:layout_width="150px"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_fen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transfrom" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="英里" />

            <EditText
                android:id="@+id/et_mile"
                android:layout_width="120px"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_mile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transfrom" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="英尺" />

            <EditText
                android:id="@+id/et_foot"
                android:layout_width="125px"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_foot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transfrom" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="英寸" />

            <EditText
                android:id="@+id/et_inch"
                android:layout_width="120px"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_inch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transfrom" />

        </TableRow>

        <Button
            android:id="@+id/clear2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/republic" />

    </LinearLayout>
</TableLayout>