<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/login2"
    tools:context="com.example.zhm.calculate.Transform1"
    android:weightSum="1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:textSize="24dp"
        android:text="@string/transform1"/>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="38dp"
                android:layout_height="25dp"
                android:text="米"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_m"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:maxLength="30" />

            <Button
                android:id="@+id/btn_m"
                android:layout_width="65dp"
                android:layout_height="35dp"
                android:text="@string/transform" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:text="里"
                android:textSize="20sp" />

            <EditText

                android:id="@+id/et_li"
                android:layout_width="220dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_li"
                android:layout_width="65dp"
                android:layout_height="35dp"
                android:text="@string/transform" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:text="丈"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_zhang"
                android:layout_width="220dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_zhang"
                android:layout_width="65dp"
                android:layout_height="35dp"
                android:text="@string/transform" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:text="尺"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_chi"
                android:layout_width="220dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_chi"
                android:layout_width="65dp"
                android:layout_height="35dp"
                android:text="@string/transform" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:text="寸"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_cun"
                android:layout_width="220dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_cun"
                android:layout_width="65dp"
                android:layout_height="35dp"
                android:text="@string/transform" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:text="分"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_fen"
                android:layout_width="220dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_fen"
                android:layout_width="65dp"
                android:layout_height="35dp"
                android:text="@string/transform" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="英里"/>

            <EditText
                android:id="@+id/et_mile"
                android:layout_width="220dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_mile"
                android:layout_width="65dp"
                android:layout_height="35dp"
                android:text="@string/transform" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="英尺"/>

            <EditText
                android:id="@+id/et_foot"
                android:layout_width="220dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_foot"
                android:layout_width="65dp"
                android:layout_height="35dp"
                android:text="@string/transform" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="英寸"/>

            <EditText
                android:id="@+id/et_inch"
                android:layout_width="220dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_inch"
                android:layout_width="65dp"
                android:layout_height="35dp"
                android:text="@string/transform" />
        </TableRow>

        <Button
            android:id="@+id/clear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:text="@string/republic" />

    </LinearLayout>
</TableLayout>